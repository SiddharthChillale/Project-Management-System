generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Projects {
  id                 String   @id @default(cuid()) //primary key is collision-avoidant unique identifier.
  name               String?  @default("Default Project") @db.VarChar(255) // project name
  description        String?
  teamSize           Int?
  publicAttachments  Json? // public by default 
  privateAttachments Json? // seen only by few individuals
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Users {
  id           String   @id @default(uuid())
  userName     String   @unique @default("<None>") // possible to construct this from the part before email? abc.xyz@email.com: extract abc.xyz as username. give option to change username
  firstName    String? // how to combine firstName and lastName to single name
  lastName     String?
  email        String   @unique
  password     String   @db.VarChar(255) //make to hash it before saving into the db
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  profilePic   Json? // can be url or a localFilePath
}
