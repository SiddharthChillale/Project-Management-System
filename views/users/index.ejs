<!doctype html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../layouts/header.ejs'); %>
        <!-- <link rel="stylesheet" href="/style.css"> -->
        <title>Users</title>
</head>

<body class="has-background-white ">

    <%- include ('../layouts/navbar.ejs'); %>
        <div class="columns my-3 px-3">
            <%- include ('../layouts/menu.ejs', user?user:undefined); %>

                <section class="is-medium column p-0 ">
                    <div class="container ">
                        <div class="mr-2" id="right-side">



                            <sl-button size="small">Manage Users</sl-button>

                            <table class="table is-narrow is-striped  container">
                                <thead class="thead ">
                                    <tr>
                                        <th>ID</th>
                                        <th>Email</th>
                                        <th>One-Time Token</th>
                                        <th>View</th>
                                    </tr>
                                </thead>
                                <% for( let ui=0; ui < users.length; ui ++ ) { %>
                                    <tr>
                                        <td>
                                            <%= users[ui].id %>
                                        </td>
                                        <td>
                                            <%= users[ui].email %>
                                        </td>
                                        <td><sl-button size="small">Regenerate</sl-button>
                                        </td>
                                        <% if (users[ui].profiles.length==0) { %>
                                            <td>
                                                <div>
                                                    <sl-button class=" " size="small" caret disabled>
                                                        <span title="No Profiles for this user">View Profile</span>
                                                        <!-- <span class="icon is-small">
                                                            <i class="fas fa-angle-down" aria-hidden="false"></i>
                                                        </span> -->
                                                    </sl-button>
                                                </div>
                                            </td>


                                            <% } else { %>

                                                <td class="">
                                                    <div>
                                                        <sl-dropdown class="">
                                                            <sl-button class="" size="small" slot="trigger" caret>
                                                                View Profile
                                                                <!-- <span class="icon is-small">
                                                                <i class="fas fa-angle-down" aria-hidden="false"></i>
                                                            </span> -->
                                                            </sl-button>


                                                            <sl-menu class=" " id="" role="">

                                                                <% for( let pid=0; pid < users[ui].profiles.length;
                                                                    pid++ ) { %>
                                                                    <sl-menu-item>
                                                                        <a class="is-size-7 " hx-target="#right-side"
                                                                            hx-get="<%= `/api/v1/users/profile/${users[ui].profiles[pid].id}`%>"
                                                                            hx-push-url="true"
                                                                            href="<%= `/api/v1/users/profile/${users[ui].profiles[pid].id}`%>">
                                                                            <%= users[ui].profiles[pid].role %>
                                                                        </a>
                                                                    </sl-menu-item>
                                                                    <% } %>
                                                            </sl-menu>
                                                        </sl-dropdown>
                                                    </div>
                                                </td>
                                                <% } %>
                                    </tr>
                                    <% } %>
                            </table>
                        </div>

                    </div>


                </section>
        </div>
        <%- include('../layouts/footer.ejs'); %>
</body>

</html>