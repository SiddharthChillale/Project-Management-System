<!-- <div id="right-side"> -->
<div>
    <div class="buttons are-small level-left" id="action-group">
        <% if(profile.id==user.profiles[0].id) {%>
            <!-- <button class="button is-primary is-light" hx-get="/api/v1/users/profile/choose" hx-target="body"
                hx-swap="outerHTML">
                Switch Profile
            </button> -->
            <button class="button is-info is-light">Edit</button>
            <!-- <button class="button is-danger is-light" hx-post="/api/v1/users/logout" hx-target="body"
                hx-swap="outerHTML" hx-push-url="true">Logout</button> -->
            <sl-divider></sl-divider>
            <%}%>
    </div>
    <div class="hero block p-4 has-background-white" id="profile-group">
        <div class="container level-left">

            <div class="level-item ">

                <figure class="container image is-128x128">
                    <% if(profile.profilePic) {%>
                        <img class="is-rounded" src="<%= `${profile.profilePic.url}` %>" alt="Profile Picture">
                        <%} else {%>
                            <sl-avatar label="User avatar"></sl-avatar>
                            <% } %>
                </figure>
            </div>

            <div class="is-flex-direction-column level-item">
                <p class="title is-4">
                    <%= profile.userName %>
                </p>
                <br />
                <p class="subtitle is-6" id="user-email">
                    <%= profile.email %> <sl-copy-button from="user-email"></sl-copy-button>
                </p>
                <p class="subtitle is-6 is-italic">Role: <%= profile.role %>
                </p>
            </div>


        </div>
        <div class="content is-flex-direction-column block">
            <!-- <div class="level"> -->
            <span class="level-left">
                <h4>Bio</h4>
            </span>

            <!-- </div> -->
            <p>

                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec
                iaculis mauris. <a>@bulmaio</a>.
            </p>
            <!-- <p class="subtitle is-6"><%# JSON.stringify(profile.socialLinks)  %></p>  -->
            <br />


        </div>


        <div>
            <% if (profile.createdEvents.length !=0) { %>
                <table class="table is-narrow is-striped container">
                    <thead>
                        <tr>
                            <th>Created Events</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let ei=0; ei < profile.createdEvents.length; ei ++ ) { %>
                            <tr>
                                <td>
                                    <a hx-get="<%= `/api/v1/events/${profile.createdEvents[ei].id}?includeAdditional=true`  %>"
                                        hx-target="#right-side" hx-select="#right-side" hx-push-url="true"
                                        href="<%= `/api/v1/events/${profile.createdEvents[ei].id}`%>">
                                        <%= profile.createdEvents[ei].name %>
                                    </a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <sl-divider></sl-divider>
                <% } %>
        </div>

        <div>
            <% if (profile.participantEvents.length !=0) { %>
                <table class="table is-narrow is-striped container">
                    <thead>
                        <tr>
                            <th>Participated Events</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let epi=0; epi < profile.participantEvents.length; epi ++ ) { %>
                            <tr>
                                <td><a href="<%= `/api/v1/events/${profile.participantEvents[epi].id}`%>">
                                        <%= profile.participantEvents[epi].name %>
                                    </a></td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <sl-divider></sl-divider>
                <% } %>
        </div>

        <div>
            <% if (profile.projectAssociations.length !=0) { %>
                <table class="table is-narrow is-striped container">
                    <thead>
                        <tr>
                            <th>Projects Associated with:</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let pi=0; pi < profile.projectAssociations.length; pi ++ ) { %>
                            <tr>
                                <td><a href="<%= `/api/v1/projects/${profile.projectAssociations[pi].projectId}`%>">
                                        <%= profile.projectAssociations[pi].project.name %>
                                    </a></td>
                                <td>
                                    <%= profile.projectAssociations[pi].userRole %>
                                </td>
                                <td>
                                    <%= profile.projectAssociations[pi].status %>
                                </td>
                                <td><button class="button is-small is-danger is-outlined">Take Action</button></td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <sl-divider></sl-divider>

                <% } %>
        </div>
    </div>
</div>