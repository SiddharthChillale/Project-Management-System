<!doctype html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../layouts/header.ejs'); %>
        <title>Onboarding</title>
</head>

<body>
    <main class="section hero is-fullheight">
        <section class="container block">
            <div class=" container " style="max-width: max-content; border: 1px solid #d7d7d7;">
                <div class=" has-text-weight-bold is-size-3 pb-3 pt-2 px-5 has-background-primary-light">Welcome to
                    TeamAssign</div>

                <div class="is-flex is-flex-direction-column px-5">

                    <!-- Email Login -->
                    <div class=" py-3">
                        <div class="has-text-weight-semibold is-italic">Have an account?</div>
                        <form action="/api/v1/users/login" method="POST">
                            <div class="field">
                                <p class="control has-icons-left has-icons-right">
                                    <input class="input" type="email" id="user-email" name="email" placeholder="Email">
                                    <span class="icon is-small is-left">
                                        <sl-icon name="envelope"></sl-icon>
                                    </span>
                                    <span class="icon is-small is-right">
                                        <!-- <sl-icon name="check"></sl-icon> -->
                                    </span>
                                </p>
                            </div>
                            <div class="field">
                                <p class="control has-icons-left">
                                    <input class="input" type="password" name="password" placeholder="Password">
                                    <span class="icon is-small is-left">
                                        <sl-icon name="key"></sl-icon>

                                    </span>
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <button class="button is-info" type="submit">
                                        Login
                                    </button>
                                </p>
                            </div>
                        </form>
                    </div>

                    <div class=" has-text-centered ">OR</div>

                    <!-- One Time Token Login -->
                    <div class=" py-1 py-3">
                        <div class="has-text-weight-semibold is-italic">Received a One-Time Token?</div>
                        <form action="/api/v1/users/login/token" method="POST">

                            <div class="field">
                                <p class="control has-icons-left">
                                    <input class="input" type="text" name="token" placeholder="One-Time Token">
                                    <span class="icon is-small is-left">
                                        <sl-icon name="upc-scan"></sl-icon>
                                    </span>
                                </p>
                            </div>
                            <div class="field">
                                <p class="control">
                                    <button class="button is-info">
                                        Login
                                    </button>
                                </p>
                            </div>
                        </form>
                    </div>


                </div>
                <div class="has-text-weight-light is-italic py-2 px-5">New here? <a
                        href="/api/v1/users/register">Register now</a>
                </div>
                <div class="container p-2" style="width: fit-content; margin: auto;">
                    <sl-button hx-get="/api/v1/users/demo" hx-target="#random-user" class="container">I'm
                        Feeling
                        Lucky</sl-button>
                    <div id="random-user" class="p-2"></div>
                </div>
            </div>
        </section>

        <!-- Demo Users -->



    </main>
</body>

</html>