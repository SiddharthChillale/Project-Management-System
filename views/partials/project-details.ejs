<div class="container content">
        <div class="m-0 p-5 has-background-white">
            <div class="level">
                <div class="level-left is-size-3 has-text-weight-medium">
                        <%= project.name %>
                    </div>
                    <span class="level-right ">
                        <button class="button is-warning"><a href="<%= `/api/v1/projects/${project.id}/assign`%>">Enroll</a></button>
                        <button class="button is-danger is-light "><a href="<%= `/api/v1/projects/${project.id}/assign`%>">Unenroll</a></button> 
        
                    </span>
            </div>
        </div>

        <div class="p-5 has-background-white">
            <div class="block">
                <div class="has-text-weight-bold">
                    <span>Seats available:</span>
                    <span>
                        <%= project.teamSize
                        -project._count.projectAssociations %>
                    </span>
                    /
                    <span><%=project.teamSize%></span>
                </div>
                <br />

                <div class="level"><%= project.description %></div>

                <br />
                <div class="level-left">
                    <div>
                        <p class="subtitle is-7">
                            Last Updated: <%= project.updatedAt %>
                        </p>
                        <p class="subtitle is-7">
                            Started: <%= project.createdAt %>
                        </p>
                    </div>
                </div>
                <!-- <span>
                    <%# project.publicAttachments?.keys.forEach(link => { %> 
                            <a href="<%# project.publicAttachments[link] %>"><%# project.publicAttachments[link] %></a>
                    <%# }) %>
                    
                </span>
                <span>
                    <%# project.privateAttachments?.keys.forEach(link => { %> 
                            <a href="<%# project.privateAttachments[link] %>"><%# project.privateAttachments[link] %></a>
                    <%# }) %>
            
                </span> -->
            </div>
            <div class="grid">
                <div class="cell">
                    
                    <% if (project.event) { %>
                    <a
                            class="is-size-4 has-text-weight-bold"
                            href="<%= `/api/v1/events/${project.event.id}`%>"
                            ><%= project.event.name %></a
                        >

                        <div>
                            From: <%= project.event.startDate %>
                        </div>
                        <div>To: <%= project.event.endDate %></div>
                    
                        <% } else { %>
                            <span class="is-size-7 is-italic is-capitalized">Not in any Event</span>
                            <% } %>
                </div>
                <div class="cell">
                    <% if (project.course) { %>
                            
                        <a
                            class="is-size-4 has-text-weight-bold"
                            href="<%= `/api/v1/departments/courses/${project.course.id}`%>"
                            ><%= project.course.name %></a
                        >
                    
                    <span class="is-size-7 is-italic is-capitalized" 
                        ><%= project.course.semester %> <%=
                        project.course.year %></span
                    >
                    <% } else { %>
                            <span class="is-size-7 is-italic is-capitalized" >Not in any Course</span>
                            <% } %>
                     
                </div>
            </div>

            <div class="field is-grouped">
                <button class="control button is-info is-light is-small">Edit</button>
                <button class="control button is-danger is-light is-small">Delete </button>
            </div >
        </div>
        
    </div>