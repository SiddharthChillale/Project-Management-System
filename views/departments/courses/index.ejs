<!doctype html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../../layouts/header.ejs'); %>

        <title>Courses</title>
</head>

<body>
    <div>
        <%- include ('../layouts/navbar.ejs'); %>
    </div>
    <div id="outer-box">
        <div class="columns m-0" id="main-box">
            <%- include ('../../layouts/menu.ejs'); %>
                <section class="is-medium column ">
                    <div class="container content ">
                        <div id="right-side">
                            <div class="mr-2" id="course-body">

                                <button class="button is-light is-small is-info"
                                    hx-get="/api/v1/departments/<%= departmentId%>/courses/new" hx-target="this"
                                    hx-swap="outerHTML">Create
                                    Course</button>


                                <table class="table round-box is-narrow is-striped  container">

                                    <thead class="thead ">
                                        <th>Course Name</th>
                                        <th>Code</th>
                                        <th>Semester</th>
                                        <th>Year</th>

                                    </thead>
                                    <% for( let ci=0; ci < courses.length; ci++ ) { %>
                                        <tr>
                                            <td class="is-align-content-center "><a
                                                    hx-get="<%= `/api/v1/departments/${departmentId}/courses/${courses[ci].id}`  %>"
                                                    hx-push-url="true" hx-target="table" hx-swap="outerHTML"
                                                    href="<%= `/api/v1/departments/${departmentId}/courses/${courses[ci].id}`  %>">
                                                    <%= courses[ci].name %>
                                                </a></td>
                                            <td class="is-align-content-center ">
                                                <%= courses[ci].code %>
                                            </td>
                                            <td class="is-align-content-center ">
                                                <%= courses[ci].semester %>
                                            </td>
                                            <td class="is-align-content-center ">
                                                <%= courses[ci].year %>
                                            </td>

                                        </tr>
                                        <% } %>
                                </table>
                            </div>
                        </div>
                    </div>



                </section>
        </div>
        <%- include('../../layouts/footer.ejs'); %>
    </div>
</body>

</html>