<!doctype html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../layouts/header.ejs'); %>

        <title>Departments</title>
</head>

<body class="has-background-white">

    <%- include ('../layouts/navbar.ejs'); %>
        <div class="columns ">
            <%- include ('../layouts/menu.ejs', user?user:undefined); %>

                <section class="is-medium column p-0 ">
                    <div class="container content my-3">

                        <div class="mr-2" id="project-body">
                            <div class="field is-grouped"></div>
                            <button class="control button is-success is-light is-small">Create Department +</button>


                            <table class="mt-2 table is-narrow is-striped  container">

                                <thead class="thead ">
                                    <th>Name</th>
                                    <th>Courses</th>

                                </thead>
                                <% for( let di=0; di < departments.length; di++ ) { %>
                                    <tr>

                                        <td><a hx-get="<%= `/api/v1/departments/${departments[di].id}`  %>"
                                                hx-push-url="true" hx-target="#project-body" hx-swap="outerHTML"
                                                href="<%= `/api/v1/departments/${departments[di].id}`  %>">
                                                <%= departments[di].name %>
                                            </a></td>
                                        <td><button class="button is-small is-info is-light">
                                                <a hx-get="<%= `/api/v1/departments/${departments[di].id}/courses/`%>"
                                                    hx-push-url="true" hx-target="#project-body" hx-swap="outerHTML"
                                                    hx-select="#course-body"
                                                    href="<%= `/api/v1/departments/${departments[di].id}/courses/`%>">View
                                                    Courses</a>
                                            </button></td>
                                    </tr>
                                    <% } %>
                            </table>
                        </div>
                    </div>



        </div>

        </div>

        </section>
        </div>
        <%- include('../layouts/footer.ejs'); %>
</body>

</html>