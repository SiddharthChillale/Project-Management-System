<div class="container content">
    <div class="m-0 p-5 has-background-primary-light">
        <div class="level">
            <div class="level-left is-size-3 has-text-weight-medium">
                <%= project.name %>
            </div>
            <span class="level-right ">
                <span>⭐⭐⭐</span>

            </span>
        </div>
    </div>

    <div class="p-5 has-background-white">
        <div class="block">

            <br />

            <div class="level">
                <%= project.description %>
            </div>

            <br />
            <div class="level-left">
                <div>
                    <p class="subtitle is-7">
                        Last Updated: <%= project.updatedAt %>
                    </p>
                    <p class="subtitle is-7">
                        Started: <%= project.createdAt %>
                    </p>
                </div>
            </div>
            <!-- <span>
                    <%# project.publicAttachments?.keys.forEach(link => { %> 
                            <a href="<%# project.publicAttachments[link] %>"><%# project.publicAttachments[link] %></a>
                    <%# }) %>
                    
                </span>
                <span>
                    <%# project.privateAttachments?.keys.forEach(link => { %> 
                            <a href="<%# project.privateAttachments[link] %>"><%# project.privateAttachments[link] %></a>
                    <%# }) %>
            
                </span> -->
        </div>
        <div class="grid">
            <div class="cell">

                <% if (project.event) { %>
                    <a class="is-size-4 has-text-weight-bold"
                        href="<%= `/api/v1/events/${project.event.id}?includeAdditional=true`%>">
                        <%= project.event.name %>
                    </a>

                    <div>
                        From: <%= project.event.startDate %>
                    </div>
                    <div>To: <%= project.event.endDate %>
                    </div>

                    <% } else { %>
                        <span class="is-size-7 is-italic is-capitalized">Not in any Event</span>
                        <% } %>

                            <div class="is-size-7 is-italic has-text-weight-light">Event</div>
            </div>

        </div>


    </div>
    <div class="p-4" style="border-top: 1px solid #151515;">


    </div>
</div>