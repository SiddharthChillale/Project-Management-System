<div id="right-side">
    <form style="max-width:fit-content;">

        <div class="title is-7">Create a new Event</div>

        <div class="is-flex is-flex-direction-column">
            <sl-input label="Event Name" name="name" value="<%= event.name %>"></sl-input>

            <br>
            <sl-input type="datetime-local" label="Start Date" name="startDate" value="<%= event.startDate %>"
                step="60"></sl-input>
            <br>
            <sl-input type="datetime-local" label="End Date" name="endDate" value="<%= event.endDate %>"></sl-input>
        </div>
        <br>
        <div class="buttons are-small">
            <button class="button is-light is-primary" hx-patch="/api/v1/events/<%= event.id %>"
                hx-replace-url="/api/v1/events/">Save</button>
            <button class="button is-light is-danger" hx-get="/api/v1/events/" hx-target="body">Cancel</button>
        </div>

    </form>
</div>