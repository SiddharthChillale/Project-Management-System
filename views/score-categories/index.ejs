<!doctype html>
<html lang="en" data-theme="light">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../layouts/header.ejs'); %>
        <title>Projects-All</title>
</head>

<body>

    <div>
        <%- include ('../layouts/navbar.ejs'); %>
    </div>
    <div id="outer-box">
        <div class="columns m-0" id="main-box">
            <%- include ('../layouts/menu.ejs', user?user:undefined); %>

                <section class="is-medium column ">
                    <div class="container content">

                        <div class="mr-2" id="right-side">
                            <sl-button size="small" hx-get="/api/v1/score-category/new" hx-target="this"
                                hx-swap="outerHTML">
                                Create category
                            </sl-button>


                            <table class="mt-2 table round-box is-narrow is-striped container">

                                <thead class="thead ">
                                    <th class="">Name</th>
                                    <th class="">Action</th>
                                </thead>
                                <tbody id="score-categories-table">
                                    <% for( let ci=0; ci < scoreCats.length; ci++ ) { %>
                                        <tr>
                                            <td class="is-size-6 is-align-content-center">
                                                <%= scoreCats[ci].name %>
                                            </td>
                                            <td class="buttons are-small is-align-content-center">

                                                <button class="button is-secondary is-light"
                                                    hx-get="/api/v1/score-category/<%=scoreCats[ci].id%>/edit"
                                                    hx-target="this" hx-swap="outerHTML">Edit</button>
                                                <button hx-delete="/api/v1/score-category/<%= scoreCats[ci].id %>"
                                                    hx-swap="delete"
                                                    hx-confirm="Delete category: <%= scoreCats[ci].name %> ?"
                                                    class="button is-danger is-light">Delete</button>
                                            </td>

                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>

                        </div>



                    </div>

                </section>
        </div>
        <%- include('../layouts/footer.ejs'); %>
    </div>

</body>

</html>