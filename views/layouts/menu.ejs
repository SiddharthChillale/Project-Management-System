<section class="column p-0 has-background-white" style="max-width: min-content;">
    <aside class="menu p-4 has-white-background">
        <div class="is-flex is-flex-wrap-wrap mb-3 pl-2">
            <div class="has-text-weight-bold is-size-4 mr-2">Project</div>
            <div class="has-text-weight-bold is-size-4 mr-2">Management</div>
            <div class="has-text-weight-bold is-size-4 mr-2">System</div>
        </div>
        <div>
            <span class="">
                <input class="input" placeholder="Search..." />
            </span>
        </div>
        <div class="p-3">
            <% if (user) { %>
                <p class="menu-label">Hello, <%= user.profiles[0].userName %>
                </p>
                <% } %>
                    <p class="menu-label">Personal</p>
                    <ul class="menu-list">
                        <li><a href="/api/v1/users/dashboard">Dashboard</a></li>

                        <% if(user){%>
                            <%# `${JSON.stringify(user)}` %>
                                <li><a
                                        href="<%= `/api/v1/users/${user.profiles[0].userId}/profile/${user.profiles[0].id}`%>">My
                                        Profile</a></li>
                                <% } %>
                    </ul>
                    <p class="menu-label">General</p>
                    <ul class="menu-list">
                        <li><a href="/api/v1/projects">Projects</a></li>
                        <li><a href="/api/v1/users">Users</a></li>
                    </ul>
                    <% if (user && (user.profiles[0].role=="PROJECT_MANAGER" || user.profiles[0].role=="ADMIN" ) ){ %>
                        <p class="menu-label">Other</p>
                        <ul class="menu-list">
                            <li><a href="/api/v1/score-category">Score Categories</a></li>
                            <li><a href="/api/v1/departments">Departments</a></li>
                            <li><a href="/api/v1/events">Events</a></li>
                        </ul>
                        <% } %>
        </div>
    </aside>
</section>